<div>
  <%= form_with url: '/', method: :post, class: %w[w-5/12 mx-auto] do |form| %>
    <div class="flex justify-between items-center">
      <%= form.label :email, 'Email:', class: %w[w-1/6] %>
      <%= form.text_field :email, placeholder: 'Email...', class: %w[w-2/3] %>
    </div>
    <div class="flex justify-between items-center">
      <%= form.label :password, 'Password:', class: %w[w-1/6] %>
      <%= form.password_field :password, class: %w[w-2/3] %>
    </div>
    <div class="flex justify-between">
      <div class="w-1/6"></div>
      <div class="w-2/3">
        <%= form.submit class: %w[bg-gray-300 rounded-lg p-3] %>
      </div>
    </div>
  <% end %>
</div>
