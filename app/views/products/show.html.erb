<h1 class="text-4xl font-bold"><%= @product.name %></h1>
<div class="flex justify-between gap-x-6">
  <div class="w-2/5">
    <img src="<%= @product.image %>" alt="<%= @product.name %>">
  </div>
  <div class="w-1/2">
    <h3 class="text-3xl font-bold">Price: <%= @product.price %></h3>
    <p><%= @product.description %></p>
    <div class="flex gap-x-4 mt-5">
      <button class="p-3 bg-blue-600 text-white rounded-lg transition-colors hover:bg-blue-700 active:bg-blue-800">
        <span class="material-symbols-outlined">
          shopping_cart_checkout
        </span>
        <span class="text-xl">Add to cart</span>
      </button>
    </div>
  </div>
</div>