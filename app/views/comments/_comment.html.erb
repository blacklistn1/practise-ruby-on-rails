<% unless comment.archived? %>
  <div>
    <p><strong>Commenter:</strong> <%= comment.commenter %></p>
  </div>

  <div>
    <p><strong>Comment:</strong> <%= comment.body %></p>
  </div>

  <div>
    <p><%= link_to 'Delete comment', [comment.article, comment], data: {
      turbo_method: :delete,
      turbo_confirm: 'are you sure to delete this comment?',
    } %></p>
  </div>

<% end %>
