<h1>Articles</h1>
<div>
  <%= link_to 'New article', new_article_path %>
</div>
<ul>
  <% @articles.each do |article| %>
    <% unless article.archived? %>
      <li>
        <%= link_to article.title, article %>
      </li>
    <% end %>
  <% end %>

</ul>

<div>
  <%= Article.public_count %> articles and counting
</div>
